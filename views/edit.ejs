<%- include("partials/header.ejs") %>

<h1 class="title text-3xl font-bold mb-8">Edit Post</h1>

<form
	action="/edit/<%= post.id %>"
	method="post"
	class="max-w-md mx-auto">
	<input
		type="hidden"
		name="postId"
		value="<%= post.id %>" />

	<label
		for="title"
		class="block text-sm font-semibold mb-2">
		Title
	</label>
	<input
		type="text"
		id="title"
		name="title"
		value="<%= post.title %>"
		required
		class="w-full border border-gray-300 p-2 rounded mb-4" />

	<label
		for="text"
		class="block text-sm font-semibold mb-2">
		Write your content here
	</label>
	<textarea
		id="text"
		name="text"
		required
		class="w-full border border-gray-300 p-2 rounded mb-4">
<%= post.text %></textarea
	>

	<input
		type="submit"
		value="Save Changes"
		class="bg-blue-500 text-white p-2 rounded hover:bg-blue-600 cursor-pointer" />
</form>

<%- include("partials/footer.ejs") %>
