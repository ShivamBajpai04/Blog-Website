<%- include("partials/header.ejs") %>
<h1 class="title text-3xl font-bold mb-8">Welcome to my BLOG!!</h1>
<div class="grid grid-cols-3">
	<!-- post list -->
	<div class="col-span-2 bg-black rounded-xl mx-5 py-5">
		<ul class="max-w-xl relative border-s mx-8 border-gray-200 dark:border-gray-700">
			<% if (locals.posts) { %> <% posts.forEach((post) => { %>
				<li class="p-3 bg-gray-500 rounded-xl mb-10 ms-4">
					<div class="post absolute max-w-3xl w-3 h-3 bg-gray-200 rounded-full mt-1.5 -start-1.5 border border-white dark:border-gray-900 dark:bg-gray-700"></div>
					<time class="mb-1 text-sm font-normal leading-none text-gray-400 dark:text-gray-500"><%const d =new Date();var monthNames = [ "January", "February", "March", "April", "May", "June",
						"July", "August", "September", "October", "November", "December" ];%><%=monthNames[d.getMonth()]%> <%=d.getFullYear()%></time>
					<h3 class="text-lg font-semibold text-gray-900 dark:text-white"><a href="/view/<%= post.id %>"><%= post.title %></a></h3>
					<p class="mb-4 text-base font-normal"><%= post.text.slice(0,30) %>....</p>
					<a
						href="/view/<%= post.id %>"
						class="inline-flex items-center px-4 py-2 text-sm font-medium text-gray-900 bg-white border border-gray-200 rounded-lg hover:bg-gray-100 hover:text-blue-700 focus:z-10 focus:ring-4 focus:outline-none focus:ring-gray-200 focus:text-blue-700 dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600 dark:hover:text-white dark:hover:bg-gray-700 dark:focus:ring-gray-700">
						Read more
						<svg
							class="w-3 h-3 ms-2 rtl:rotate-180"
							aria-hidden="true"
							xmlns="http://www.w3.org/2000/svg"
							fill="none"
							viewBox="0 0 14 10">
							<path
								stroke="currentColor"
								stroke-linecap="round"
								stroke-linejoin="round"
								stroke-width="2"
								d="M1 5h12m0 0L9 1m4 4L9 9" />
						</svg>
					</a>
				</li>
			<% })} %>
		</ul>
</div>

<!-- Hot posts -->

<div class="col-span-1 rounded-xl max-h-3xl bg-black mx-5 py-3 px-5">
	<h1 class="text-white title">Hot Posts</h1>	
	<ul>
		<% posts.slice(0,5).forEach((post)=>{ %>
			<li class="text-white">
				<a href="/view/<%= post.id %>"><%= post.title %></a>
			</li>
			<% }) %>
	</ul>
</div>

</div>

<%- include("partials/footer.ejs") %>
