<%- include("partials/header.ejs") %>
<div class="max-w-4xl container mx-auto my-8 bg-white rounded-md">
	<h1 class="text-4xl font-bold mb-6"><%= post.title %></h1>
	<hr>

	<% if (post.imageUrl) { %>
	<img
		src="<%= post.imageUrl %>"
		alt="<%= post.title %>"
		class="mb-4 rounded-md shadow-md max-w-full h-auto standard-image-size"
		onload="imageLoaded(this)"
		onerror="imageError(this)" />
	<% } %>

	<p class="text-gray-700 text-lg mb-8 first-letter:text-7xl first-letter:font-bold"><%= post.text %></p>

	<div class="flex justify-between items-center">
		<a
			href="/edit/<%= post.id %>"
			class="text-white bg-black py-2 px-4 rounded hover:bg-blue-600">
			Edit
		</a>
		<form
			action="/remove"
			method="post">
			<input
				type="hidden"
				name="postId"
				value="<%= post.id %>" />
			<button
				type="submit"
				class="bg-black text-white py-2 px-4 rounded hover:bg-red-600">
				Delete
			</button>
		</form>
	</div>
	<a
		href="/"
		class="block text-blue-500 mt-4">
		&larr; Back to Blog List
	</a>
</div>
<%- include("partials/footer.ejs") %>
